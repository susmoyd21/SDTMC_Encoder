
act dead,live,step;

proc X(x,y:Pos)=
     (x==1 || x==16) -> dead.X(x,y) <>
     (y==1 || y==16) -> live.X(x,y) <>
     (
       dist b1,b2:Bool[1/4].
       (( b1 &&  b2) -> step.X(x+1,y)+
        ( b1 && !b2) -> step.X(max(1,x-1),y)+
        (!b1 &&  b2) -> step.X(x,y+1)+
        (!b1 && !b2) -> step.X(x,max(1,y-1))
     ) );

init X(10,6);

